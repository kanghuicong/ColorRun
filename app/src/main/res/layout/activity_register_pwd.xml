<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_full"
    android:orientation="vertical"
    android:background="@color/ViewBackground">

    <include layout="@layout/main_back" />

    <LinearLayout
        style="@style/layout_full"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <TextView
            style="@style/layout_vertical"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textSize="20sp" />

        <LinearLayout
            style="@style/layout_vertical"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_register_pwd_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您注册的手机号码为:"
                android:textColor="#2E2E2E"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_registered_3_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/orange"
                android:textSize="16sp"
                />

        </LinearLayout>

        <TextView
            style="@style/layout_vertical"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center|left|top"
            android:text="请设置您的密码"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_registered3_pwd"
            style="@style/layout_vertical"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@android:drawable/editbox_background_normal"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="14sp"
            />

        <EditText
            android:id="@+id/et_registered3_repwd"
            style="@style/layout_vertical"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:singleLine="true"
            android:background="@android:drawable/editbox_background_normal"
            android:hint="请输入确认密码"
            android:inputType="textPassword"
            android:textSize="14sp" />

        <TextView
            style="@style/layout_vertical"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="密码6~16位，必须由数字、字母、字符至少两种组成"
            android:textSize="14dp"/>

        <View
            style="@style/layout_vertical"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/btn_registered3_commit"
            style="@style/layout_vertical"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/login_shape_bt"
            android:text="提交"
            android:textColor="#ffffff" />
        <View
            style="@style/layout_vertical"
            android:layout_weight="4.5"/>
    </LinearLayout>

</LinearLayout>
