<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:orientation="horizontal"
    android:id="@+id/listview_id"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivLeRunBackground"
        android:layout_width="150dp"
        android:layout_height="95dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/defaut_error_long" />

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="95dp">

        <TextView

            android:id="@+id/tvLeRunName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:text="卡乐泡泡跑"
            android:layout_marginTop="5dp"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ivLeRunBackground"
                android:src="@mipmap/lerun_clock" />


            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tvLeRunTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/ivLeRunBackground"
                android:text="07月11日"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ivLeRunBackground"
                android:src="@mipmap/lerun_location" />

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tvLeRunLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="奥体中心"
                android:textColor="@color/black" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>