<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:id="@+id/ll_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_payment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="姓名：conghuikang"/>

        <TextView
            android:id="@+id/tv_payment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="10dp"
            android:text="衣服颜料+颜料+假发+衣服颜料+颜料+假发+衣服颜料"/>
    </LinearLayout>

    <View
        android:id="@+id/view_f"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_product"/>

    <RelativeLayout
        android:id="@+id/rl_price"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/view_f"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/iv_background"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_pay_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="付款金额"/>

        <TextView
            android:id="@+id/tv_payment_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_pay_price"
            android:text="￥68"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_price"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:text="选择支付方式"/>

    <RelativeLayout
        android:id="@+id/rl_zfb"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/tv_choose"
        android:layout_marginTop="10dp"
        android:background="#fff">

        <ImageView
            android:id="@+id/iv_zfb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="25dp"
            android:scaleType="center"
            android:src="@drawable/zfb1"/>

        <LinearLayout
            android:padding="10dp"
            android:id="@+id/ll_zfb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/iv_zfb"
            android:layout_toRightOf="@+id/iv_zfb"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐支付宝用户使用"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_payment_zfb"
            android:background="@mipmap/btn_play_normal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <View
        android:id="@+id/view_s"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_zfb"/>

    <RelativeLayout
        android:id="@+id/rl_wxzf"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/view_s"
        android:background="#fff">

        <ImageView
            android:id="@+id/iv_wxzf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="25dp"
            android:scaleType="center"
            android:src="@drawable/wxzf"/>

        <LinearLayout
            android:padding="10dp"
            android:id="@+id/ll_wxzf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/iv_wxzf"
            android:layout_toRightOf="@+id/iv_wxzf"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐微信用户使用"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_payment_wx"
            android:background="@mipmap/btn_play_normal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_play"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f00"
        android:layout_alignParentBottom="true"
        android:text="确认支付"/>
</RelativeLayout>
